# Environment Variables for ClaimLens
# Copy this file to .env and fill in your API keys
# IMPORTANT: Never commit the .env file to version control!

# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Search API Keys (at least one required)
TAVILY_API_KEY=your_tavily_api_key_here
SERPAPI_KEY=your_serpapi_key_here

# LLM Configuration
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1

# Verification Settings
MAX_VERIFICATION_ITERATIONS=3
CONFIDENCE_THRESHOLD=0.7
MAX_EVIDENCE_PER_CLAIM=5
SEARCH_RESULTS_PER_QUERY=5

# Verifier Type: "openai" or "huggingface"
VERIFIER_TYPE=openai
HF_NLI_MODEL=facebook/bart-large-mnli

# Search Provider: "tavily" or "serpapi"
SEARCH_PROVIDER=tavily

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ==================== SECURITY SETTINGS ====================

# CORS Origins (comma-separated list of allowed origins)
# For production, specify exact origins like: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# API Key for authentication (optional but recommended for production)
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
# If set, clients must include X-API-Key header
API_KEY=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Input Limits
MAX_TEXT_LENGTH=10000

# Job Storage Limit (for memory management)
MAX_JOBS_STORED=1000

# Debug Mode (set to False in production!)
# When True, detailed error messages are returned to clients
DEBUG_MODE=False
